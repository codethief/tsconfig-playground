{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": false,
    "emitDeclarationOnly": true,
  }
}
